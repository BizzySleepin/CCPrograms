-- API

function downloadFile(url, path, m)
        if m == "r" then 
          if fs.exists(path) then
            shell.run("delete "..path)
            sleep(10)
            local content = http.get(url)
            local file = assert(io.open(path, "w"))
            file:write(content.readAll())
            file:close()
          else
            local content = http.get(url)
            local file = assert(io.open(path, "w"))
            file:write(content.readAll())
            file:close()
          end
        end
        if m == nil then 
          if not fs.exists(path) then
            local content = http.get(url)
            local file = assert(io.open(path, "w"))
            file:write(content.readAll())
            file:close()
          end
        end 
end